    }
    .product-info .product-title {
        font-size: 20px;
        text-transform: capitalize;
        margin-bottom: 12px;
    }
    .dropdown-cart {
        -webkit-box-shadow: 0px 3px 24px 0px rgb(0 0 0 / 8%);
