                                                        @foreach (var item2 in detailDatas.Where(x => x.DetailId == item.DetailId))
                                                        {
                                                            <button class="button-detail btn-calc" onclick="insertCompInValueWithButton(@item2.Id)" id="btn_class_variant_@item2.Id">
