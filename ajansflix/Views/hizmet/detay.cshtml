                                                                @if (item2.Price == 0)
                                                                {
                                                                    <p style="font-weight:800;">Ücretsiz</p>
                                                                }
                                                                else
                                                                {
                                                                    <p style="font-weight:800;">+ @Convert.ToInt32(item2.Price) TL</p>
                                                                }
                                                            </button>

                                                            <input type="hidden" id="price_@item2.Id" value="@Convert.ToInt32(item2.Price)" />
